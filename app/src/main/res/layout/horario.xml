<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    

    <include
        android:id="@+id/myToolbar"
        layout="@layout/mybar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="2"
        app:layout_constraintTop_toBottomOf="@id/myToolbar"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/curso1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:text="Redes y Telecomunicaciones" />

        <!-- Cuadro para el curso 2 -->
        <TextView
            android:id="@+id/curso2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_green_light"
            android:gravity="center"
            android:text="Estadistica II" />


        <TextView
            android:id="@+id/curso3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:text="Servidores I" />


        <TextView
            android:id="@+id/curso4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_purple"
            android:gravity="center"
            android:text="Lenguaje de Programacion I" />

        <TextView
            android:id="@+id/curso5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:text="Experiencia de Usuario" />


        <TextView
            android:id="@+id/curso6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:text="Desarrollo de Aplicaciones Moviles" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>